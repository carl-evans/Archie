{
  "name": "archie",
  "version": "1.0.0",
  "description": "Mobile-first flexbox grid that falls back to a block layout where flex isn't supported. Specialises in equal width and odd column grids e.g. fifths but also offers varied width columns.",
  "main": "index.js",
  "scripts": {
    "dev-sass": "node-sass src/main.scss dist/archie.min.css -w --output-style compressed",
    "dev-watch": "browser-sync start --server --files '*.html, dist/css/*.css'",
    "build": "concurrently \"npm:dev-*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carl-evans/Archie.git"
  },
  "author": "Carl Evans",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/carl-evans/Archie/issues"
  },
  "homepage": "https://github.com/carl-evans/Archie#readme",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^5.0.2",
    "node-sass": "^4.13.1"
  }
}
